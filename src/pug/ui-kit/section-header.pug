extends ./layout/ui-layout.pug
include ./mixins/*.pug
include ./../mixins/*.pug

block variables
    - var title = 'Шапка';
    - var pageClass = 'body--dashboard';
    - var pageLink = 'about.html';

block content

    //- Заголовок компонента
    h1.ui-kit__component-title.
        Шапка

    //- Демонстрация компонента
    .ui-kit__component-demo.ui-kit__component-demo--dark-bg
        .block-full-width
            +section-header()          
            +section-header("inner", pageLink)          

    //- Код для вызова компонента
    .ui-kit__component-code
        pre.
            +section-header()          
            +section-header("inner", pageLink)

    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:
        mixin/section-header.pug

    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
            mixin section-header(page, pageLink)
                if page == "inner"
                    .section-header.section-header--inner
                        .section-header__content
                            h2.section-header__content-title Digital Nomad
                            p.section-header__content-subtitle cайт IT специалиста
                            nav.nav
                                ul.nav__list
                                    each item in nav
                                        li.nav__list-item
                                            a(href= item.link class=(item.link === pageLink ? "nav__list-item-link--active" : undefined)).nav__list-item-link \#{item.name}
                else
                    .section-header
                        .section-header__content
                            h1.section-header__content-title Digital Nomad
                            p.section-header__content-subtitle веб-разработчик, ui/ux дизайнер
                            nav.nav
                                ul.nav__list
                                    each item in nav
                                        li.nav__list-item
                                            a(href= item.link).nav__list-item-link \#{item.name}

    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:
        pages/*.pug

    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
            block variables
                - var pageLink = 'about.html';

    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:
        data/nav.json

    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
            [
                {
                    "name": "Обо мне",
                    "link": "about.html"
                },

                {
                    "name": "Портфолио",
                    "link": "portfolio.html"
                },

                {
                    "name": "Блог",
                    "link": "blog.html"
                },

                {
                    "name": "Контакты",
                    "link": "contacts.html"
                }
            ]