extends ./layout/ui-layout.pug
include ./mixins/*.pug
include ./../mixins/*.pug

block variables
    - var title = 'Оставить комментарий';
    - var pageClass = 'body--dashboard';

block content

    //- Заголовок компонента
    h1.ui-kit__component-title.
        Оставить комментарий

    //- Демонстрация компонента
    .ui-kit__component-demo
        .block-full-width
            +one-comment()
                p текст комментария

    //- Код для вызова компонента
    .ui-kit__component-code
        pre.
            include ./../mixins/one-comment.pug

    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:
        mixins/one-comment.pug

    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
            mixin one-comment(login='Джон До', date="05 Мая 2017 года в 15:45", avatar_url, link)
                .one-comment
                    .one-comment__avatar
                        +avatar-small(avatar_url,link)
                    .one-comment__data
                        .one-comment__login \#{login}
                        .one-comment__date
                            img(src="./../img/favicons/clock.svg", alt="")
                            \#{date}
                        .one-comment__text
                            block