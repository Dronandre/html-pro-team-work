extends ./layout/ui-layout.pug
include ./mixins/*.pug
include ./../mixins/*.pug

block variables
    - var title = 'Карточка для поста';
    - var pageClass = 'body--dashboard';

block content

    //- Заголовок компонента
    h1.ui-kit__component-title.
        Карточка для поста

    //- Демонстрация компонента
    .ui-kit__component-demo
        +card-post("Как я встретил старого друга в NY и чем это закончилось", "./../img/posts/post-1.jpg")

    //- Код для вызова компонента
    .ui-kit__component-code
        pre.
            +card-post("Как я встретил старого друга в NY и чем это закончилось", "./../img/posts/post-1.jpg")

    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:
        mixins/card-post.pug

    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
            mixin card-post(title, img, link="#")
                .card-post
                    .card-post__img
                        a(href= link)
                            img(src= img alt= title)
                    h4.card-post__title
                        a(href= link)  \#{title}