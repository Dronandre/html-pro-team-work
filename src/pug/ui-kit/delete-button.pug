extends ./layout/ui-layout.pug
include ./mixins/*.pug
include ./../mixins/*.pug

block variables
    - var title = 'Кнопки - UI-kit и HTML фреймворк - Документация';
    - var pageClass = 'body--dashboard';

block content

    //- Заголовок компонента
    h1.ui-kit__component-title.
        Кнопка удаления

    //- Демонстрация компонента
    .ui-kit__component-demo
        +delete-button()

    //- Код для вызова компонента
    .ui-kit__component-code
        pre.
            +delete-button()

    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:
        mixins/delete-button.pug

    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
            mixin delete-button(text="Удалить", type="reset")
                button(class="delete-button" type= type)&attributes(attributes) \#{text}