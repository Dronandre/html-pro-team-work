extends ./layout/ui-layout.pug
include ./mixins/*.pug
include ./../mixins/*.pug

block variables
    - var title = 'Секция пагинация';
    - var pageClass = 'body--dashboard';

block content

    //- Заголовок компонента
    h1.ui-kit__component-title.
        Секция пагинация

    //- Демонстрация компонента
    .ui-kit__component-demo
        +section-pagination()

    //- Код для вызова компонента
    .ui-kit__component-code
        pre.
            +section-pagination()
            

    //- Файл в котором описан компонент
    .ui-kit__element-title.
        Название файла:
        mixins/section-pagination.pug

    //- Распечатка кода компонента
    .ui-kit__element-code
        pre.
            mixin section-pagination()
                .section-pagination
                    .pagination__item
                        +pagination-button("назад")
                    .pagination__item  
                        +pagination-button("1")
                    .pagination__item
                        +pagination-button("2")
                    .pagination__item
                        +pagination-button("3")
                    .pagination__item
                        +pagination-button("вперед") 